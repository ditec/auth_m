<h1>Public users</h1>
<table>
  <tr>
    <th>user</th>
    <th>active?</th>  
    <th>registration_created_at</th>  
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td>
        <%= user.email %>
      </td>       
      <td>
        <%= user.active %>
      </td>      
      <td>
        <%= user.created_at %>
      </td>
      <% if can? :read, AuthM::User %>
        <td>
          <%= link_to 'Show', user_path(user) %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>