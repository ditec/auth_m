<%= form_tag custom_sign_up_path, method: :post do %>
  <ul>
    <% @user.errors.full_messages.each do |error| %>
      <li>
        <%= error %>
      </li>
    <% end %>
  </ul>
  <h4>New User</h4>
  <div>
    <label for="user_email">Email</label>
    <%= email_field_tag "user[email]",@user.email, required: true %>
  </div>
  <div>
    <label for="user_password">Password</label>
    <%= password_field_tag "user[password]",@user.password, required: true %>
  </div>
  <div>
    <label for="user_password_confirmation">Password confirmation</label>
    <%= password_field_tag "user[password_confirmation]",@user.password_confirmation, required: true %>
  </div>
  <br/>
  <div>
    <%= submit_tag "Save" %>
  </div>
<% end %>