<h1>Edit user</h1>
<%= form_with model: [@person,@user], method: :PUT,  local: true do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %>
        prohibited
        this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= form.label :email %>
    <br/>
    <%= form.email_field :email %>
  </p>
  <p>
    <%= link_to "send email for reset password", generate_new_password_email_person_user_path, method: :post %>
  </p>
  <%=render partial: 'policies', locals: {form: form, edit: true}%>
  <p>
    <h3>Active?</h3>
    <table>
      <tr>
        <%= form.radio_button :active, 1, checked: @user.active %>
        activo
        <%= form.radio_button :active, 0, checked: !@user.active %>
        inactivo
      </tr>
    </table>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Back', person_path(@person) %>
