<h1>Listing users</h1>

<table>
  <tr>
    <th>username</th>
    <th>email</th>
    <th>role</th>
    <th>policies</th>
    <th>active?</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>      
      <td><%= user.email %></td>      
      <td><%= user.role %></td>       
      <td><%= user.policy_group(current_branch).name if user.policy_group(current_branch).present? %></td>      
      <td><%= user.active %></td>
      <td><%= link_to 'Show', user if can? :read, user %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New', new_user_path if can? :write, AuthM::User %>